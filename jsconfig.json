{
  "compileOnSave": false,
  "compilerOptions": {
    "checkJs": false,
    "moduleResolution": "node",
    "module": "commonJS",
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "."
  },
  "paths": {
    "*": [
      "node_modules/*"
    ]
  },
  "include": [
    "libs",
    "tests", "config.js"
  ],
  "exclude": [
    "node_modules",
    "tmp"
  ]
}